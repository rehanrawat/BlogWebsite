<%- include('partials/header'); %>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input autocomplete="off" type="text" class="form-control" name="postTitle">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea name="postBody" class="form-control" rows="5"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-dark">Publish</button>
    </form>
    <%- include('partials/footer') %>